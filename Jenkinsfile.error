pipeline {
                agent any
                stages {
                    stage("Failing stage with catch") {
                        steps {
                            echo 'Exporting sonar report'
                            catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
                                error('Failing and marking as unstable')
                            }
                            echo 'Done'
                        }
                    }
                }
            }
